<h1>Order Page</h1>

<h2>Restaurant: <%= link_to @restaurant.name, restaurant_path(@restaurant) %></h2>
<h2>User: <%= link_to @user.name, user_path(@user) %></h2>

<hr>
<h2>Order Items</h2>

<table>  
  <% @items.each do |item| %>
    <tr>
      <td><%= link_to item.name, item_path(item) %></td>
      <td>$<%= item.price %></td>
    </tr>
  <% end %>
  <tr class='total'>
    <strong>
      <td>Total: </td>
      <td><%= @order.total_price %></td>
    </strong>
  </tr>

</table>
  

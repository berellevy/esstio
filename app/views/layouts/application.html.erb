<!DOCTYPE html>
<html>
  <head>
    <title>Yestaurant</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="nav bar">
      <p>
       
        <% if @current_user %>
          Welcome <%= @current_user.name %>!
          <%= button_to "logout", sessions_logout_path, method: :delete %>    
        <% else %>
          <%= button_to "signup", new_user_path, method: :get %>
          <%= button_to "login", new_login_path, method: :get %>
        <% end %>
       
      </p>
    </div>
    <%= yield %>
  </body>

</html>

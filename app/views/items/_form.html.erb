<div class="third-row">
  <% if flash[:errors] %>
    <div class="tile-fit-contents">
      <% flash[:errors].each do |error| %>
        <p><%= error %> </p> 
      <% end %>
    </div>
  <% end %>

  <%= form_for @item do |f| %>
    <div class="tile-fit-contents item-form">
      <p>
        <%= f.label :name %> <br>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :description %> <br>
        <%= f.text_area :description %>
      </p>
      <P>
        <%= f.label :price %> <br>
        <%= f.number_field :price %>
      </P>
      <p>
        <%= f.submit %>
      </p>
    </div>
  <% end %>

  <%= button_to "back to menu", items_path, method: :get %>

</div>  